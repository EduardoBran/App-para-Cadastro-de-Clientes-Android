<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/tela_fundo"
    tools:context=".TelaCadastro">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:background="@color/backgroundPadrao"
        android:orientation="vertical"
        android:padding="34px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/tv_matricula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25px"
            android:layout_marginBottom="10px"
            android:paddingTop="2px"
            android:paddingBottom="2px"
            android:text="Matrícula:"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_matricula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textSize="14sp"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/tv_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15px"
            android:layout_marginBottom="10px"
            android:paddingTop="2px"
            android:paddingBottom="2px"
            android:text="Nome:"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textSize="14sp"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/tv_endereco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15px"
            android:layout_marginBottom="10px"
            android:paddingTop="2px"
            android:paddingBottom="2px"
            android:text="Endereço (Logradouro / Rua / Avenida):"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_endereco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textSize="14sp"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/tv_numero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15px"
            android:layout_marginBottom="10px"
            android:paddingTop="2px"
            android:paddingBottom="2px"
            android:text="Número:"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_numero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textSize="14sp"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/tv_complemento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:layout_marginBottom="15px"
            android:paddingTop="2px"
            android:paddingBottom="2px"
            android:text="Complemento:"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_complemento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textSize="14sp"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/tv_cidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15px"
            android:layout_marginBottom="10px"
            android:paddingTop="2px"
            android:paddingBottom="2px"
            android:text="Cidade:"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_cidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textSize="14sp"
            tools:ignore="SpeakableTextPresentCheck" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10px"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_gravar"
                android:layout_width="120dp"
                android:layout_height="56dp"
                android:layout_gravity="center|center_horizontal"
                android:layout_marginLeft="30px"
                android:layout_marginRight="150px"
                android:onClick="gravar"
                android:text="GRAVAR" />

            <Button
                android:id="@+id/btn_voltar"
                android:layout_width="120dp"
                android:layout_height="56dp"
                android:layout_gravity="center|center_horizontal"
                android:layout_marginLeft="30px"
                android:onClick="voltarTelaOpcoes"
                android:text="VOLTAR" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

